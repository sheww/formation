package metier;

public class CompteEnBanque{
	private double solde;
	private MyThread t1;
	private MyThread t2;

	public CompteEnBanque()
	{
		solde = 0;
		t1 = new MyThread();
		t2 = new MyThread();
	}
	
	public synchronized void  crediter(double montant) {
		solde = solde + montant;
	} // Ô¨Ån de crediter

	public double consulter() {
		return solde;
	}
	
	public void run()
	{
		for(int i = 0; i < 10; i++)
		{
			System.out.println(consulter());
			crediter(123);
		}
	}
}